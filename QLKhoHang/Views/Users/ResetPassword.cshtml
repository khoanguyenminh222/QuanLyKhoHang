@model QLKhoHang.Models.user

@{
    ViewBag.Title = "Đặt lại mật khẩu";
}

<h2>Chỉnh sửa</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <hr />
    <div class="row">
        <div class="form-horizontal col-lg-6 col-sm-6 mx-auto">

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Username)
            @Html.HiddenFor(model => model.tenNV)
            @Html.HiddenFor(model => model.diachiNV)
            @Html.HiddenFor(model => model.dienthoaiNV)

            <div class="form-group">
                @Html.LabelFor(model => model.Username, "Tên đăng nhập: ", htmlAttributes: new { @class = "control-label col-md-3" })
                <div class="col-md-9">
                    @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                </div>
            </div>


            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Đặt lại mật khẩu" class="btn btn-success" />
                </div>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Trở về", "Index")
</div>
